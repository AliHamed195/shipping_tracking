@model shipping_tracking.Models.Category

@{
    ViewData["Title"] = "Details Category";
}

<style>
    h1 {
        text-align: center;
        margin-bottom: 2rem;
        color: #4a4e69;
        font-size: 2.5rem;
    }

    .row {
        display: flex;
        justify-content: center;
        padding: 20px;
    }

    dl.row {
        max-width: 800px;
        margin: auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    dt {
        text-align: left;
        padding: 8px 0;
        font-weight: bold;
        color: #4a4e69;
    }

    dd {
        text-align: left;
        padding: 8px 0;
        margin-left: 0;
    }

    .back-btn {
        margin: 10px 10px 0 10px;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        width: 20%;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }
</style>

<h1>Details Category</h1>

<div class="row">
    <div class="col-md-12">
        <h4>Category</h4>
        <hr />
    </div>
    <div class="col-md-12">
        <dl class="row">
            <dt class="col-sm-2">
                Category Name
            </dt>
            <dd class="col-sm-10">
                @Model.CategoryName
            </dd>
            <dt class="col-sm-2">
                Description
            </dt>
            <dd class="col-sm-10">
                @Model.Description
            </dd>
            <div class="back-btn">
                <a href="/Category/All" class="btn btn-secondary">Back</a>
            </div>
        </dl>
    </div>
</div>

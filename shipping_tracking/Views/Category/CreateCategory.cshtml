@model shipping_tracking.Models.Category

<style>
    h1, h4 {
        text-align: center;
        color: #4a4e69;
    }

    h1 {
        margin-bottom: 1rem;
        font-size: 2.5rem;
    }

    h4 {
        margin-bottom: 0.5rem;
    }

    .row {
        display: flex;
        justify-content: center;
        margin-top: 50px !important;
    }

    form {
        max-width: 600px;
        margin: auto;
        padding: 25px;
        border-radius: 10px;
        background: linear-gradient(145deg, #ffffff, #e6e6e6);
        box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.2), -5px -5px 15px rgba(255, 255, 255, 0.1);
    }

    .form-group {
        margin-bottom: 1.5rem;
        position: relative;
    }

    label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: bold;
        color: #4a4e69;
    }

    input[type="text"],
    textarea {
        width: 100%;
        padding: 10px 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
        transition: all 0.3s ease;
    }

    input[type="text"]:focus,
    textarea:focus {
        border-color: #007bff;
        box-shadow: 0 0 8px rgba(0, 123, 255, 0.2);
        outline: none;
    }

    textarea {
        min-height: 120px;
        resize: vertical;
    }

    .btn-primary {
        width: 100%;
        padding: 12px;
        border-radius: 5px;
        background-color: #007bff;
        color: white;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .back-btn {
        margin-left: 10px;
        margin-right: 10px;
    }

    .btn-secondary {
        width: 100%;
        padding: 12px;
        border-radius: 5px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
        background-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    .text-danger {
        color: #dc3545;
        position: absolute;
        bottom: -20px;
        left: 0;
        font-size: 0.9rem;
    }
</style>


<h1>Create Category</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateCategory">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group d-flex mt-3">
                <div class="col-md-2 back-btn">
                    <a href="/Category/All" class="btn btn-secondary">Back</a>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @if (ViewBag.ExceptionError != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Swal.fire({
                    position: 'top-end',
                    title: 'Oops!!',
                    text: '@ViewBag.ExceptionError',
                    icon: 'error',
                    showConfirmButton: false,
                    timer: 2000
                });
            });
        </script>
    }
}

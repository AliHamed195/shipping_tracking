@model IEnumerable<shipping_tracking.Models.Category>

<h1>Categories</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="category-row-@item.CategoryID">
                <td>
                    @item.CategoryName
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    <a asp-action="UpdateCategory" asp-route-id="@item.CategoryID">Edit</a> |
                    <a asp-action="DetailsCategory" asp-route-id="@item.CategoryID">Details</a> |
                    <a onclick="deleteCategory(@item.CategoryID)">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>

@if (TempData["successMessage"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            Swal.fire({
                position: 'top-end',
                title: 'Done...',
                text: '@TempData["successMessage"]',
                icon: 'success',
                showConfirmButton: false,
                timer: 2000
            });
        });
    </script>
}

@if (TempData["ErrorMessage"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            Swal.fire({
                position: 'top-end',
                title: 'Oops!!'
                text: '@TempData["ErrorMessage"]',
                icon: 'error',
                showConfirmButton: false,
                timer: 2000
            });
        });
    </script>
}

<script>
    function deleteCategory(id) {
        Swal.fire({
            title: 'Are you sure?',
            text: 'You will not be able to recover this category!',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/Category/Delete/' + id,
                    type: 'POST',
                    success: function (response) {
                        if (response.success) {
                            $('#category-row-' + id).remove();
                            Swal.fire(
                                'Deleted!',
                                'Your category has been deleted.',
                                'success'
                            );
                        } else {
                            Swal.fire(
                                'Error!',
                                response.message,
                                'error'
                            );
                        }
                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        Swal.fire(
                            'Error!',
                            'An error occurred while deleting the category.',
                            'error'
                        );
                    }
                });
            }
        });
    }
</script>

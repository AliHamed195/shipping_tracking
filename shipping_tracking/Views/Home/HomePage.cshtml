        }

        .category-card {
            margin-top: 2rem;
            overflow: hidden; /* Hide parts of the button that are outside the card initially */
            transition: box-shadow 0.3s ease; /* Smooth shadow transition */
            position: relative;
            border: 1px solid black;
        }

        .category-card-button {
            position: absolute;

            color: white; /* Button text color */
            transition: bottom 0.3s ease; /* Smooth slide-up transition */
            border: none;
            padding: 10px 0; /* Vertical padding */
        }

        .category-card:hover {
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

            .category-card:hover .category-card-button {
                bottom: 0; /* Slide up to become visible */
            }



        .card-title {
            font-size: 1.5rem;
            font-weight: bold;
        }

        .card-text {
            margin-bottom: 2rem;
        }

        .btn-primary {
            background-color: #005cbf;
        }

        /* Adjust navbar spacing */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .small-toggler .navbar-toggler-icon {
            /* Adjust the icon size */
            background-size: 0.75em 0.75em;
        }


        .navbar-nav .nav-item .nav-link:hover, .navbar-brand:hover {
            color: #009BDF !important; /* Override Bootstrap styles with increased specificity */
            text-decoration: none;
        }

        /* Account buttons hover effect */
        .account-btns button:hover {
            background-color: #005cbf; /* Background color on hover */
            color: #fff; /* Text color on hover */
        }

        .account-btns button {
            background: none;
            border: 1px solid #005cbf;
            padding: 0.375rem 0.75rem;
            border-radius: 0.25rem;
            color: #005cbf;
            transition: color 0.2s, background-color 0.2s; /* Smooth transition for hover effect */
        }

        /* Add bottom spacing to the container */
        .container, .outer-container {
            margin-bottom: 4rem; /* Adjust as needed */
        }

        /* About section */

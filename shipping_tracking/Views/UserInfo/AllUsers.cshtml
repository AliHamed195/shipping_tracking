@model IEnumerable<shipping_tracking.Models.UserInfo>

<div class="row mt-3 mb-4">
    <div class="col-md-2">
        <a class="btn btn-outline-primary" href="/User/Create">Create New</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.AspNetUser.UserName</td>
                <td>@user.AspNetUser.Email</td>
                <td>@user.Address</td>
                <td>
                    <a class="btn btn-secondary btn-sm" href="/User/Update/@user.AspNetUserId">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/User/Delete/@user.AspNetUserId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <!-- In the <head> section of your layout -->
    <link rel="stylesheet" href="~/lib/datatable/dataTables.bootstrap4.min.css" />

    <!-- Before the closing </body> tag in your layout -->
    <script src="~/lib/datatable/jquery.dataTables.min.js"></script>

    <script src="~/lib/datatable/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>
}
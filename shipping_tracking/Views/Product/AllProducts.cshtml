@model IEnumerable<shipping_tracking.Models.Product>

@{
    ViewData["Title"] = "AllProducts";
}

<h1>All Products</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Description
            </th>
            <th>
                Price
            </th>
            <th>
                Stock Quantity
            </th>
            <th>
                Category
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="product-row-@item.ProductID">
                <td>
                    @item.ProductName
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.StockQuantity
                </td>
                <td>
                    @item.Category.CategoryName
                </td>
                <td>
                    <a asp-action="UpdateProduct" asp-route-id="@item.ProductID">Edit</a> |
                    <a asp-action="DetailsProduct" asp-route-id="@item.ProductID">Details</a> |
                    <a onclick="deleteProduct(@item.ProductID)">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    @if (TempData["successMessage"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Swal.fire({
                    position: 'top-end',
                    title: 'Done...',
                    text: '@TempData["successMessage"]',
                    icon: 'success',
                    showConfirmButton: false,
                    timer: 2000
                });
            });

            @TempData["successMessage"] = null;
        </script>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Swal.fire({
                    position: 'top-end',
                    title: 'Oops!!'
                                                    text: '@TempData["ErrorMessage"]',
                    icon: 'error',
                    showConfirmButton: false,
                    timer: 2000
                });
            });

            @TempData["ErrorMessage"] = null;
        </script>
    }

    <script>
        function deleteProduct(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: 'You will not be able to recover this product!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/Product/Delete/' + id,
                        type: 'POST',
                        success: function (response) {
                            if (response.success) {
                                $('#product-row-' + id).remove();
                                Swal.fire(
                                    'Deleted!',
                                    'Your Product has been deleted.',
                                    'success'
                                );
                            } else {
                                Swal.fire(
                                    'Error!',
                                    response.message,
                                    'error'
                                );
                            }
                        },
                        error: function (xhr, ajaxOptions, thrownError) {
                            Swal.fire(
                                'Error!',
                                'An error occurred while deleting the Product.',
                                'error'
                            );
                        }
                    });
                }
            });
        }
    </script>
}
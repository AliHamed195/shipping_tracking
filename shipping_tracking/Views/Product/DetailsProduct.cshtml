@model shipping_tracking.Models.Product

@{
    ViewData["Title"] = "DetailsProduct";
}

<h1>DetailsProduct</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ProductName
        </dt>
        <dd class = "col-sm-10">
            @Model.ProductName
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
        <dt class = "col-sm-2">
            Price
        </dt>
        <dd class = "col-sm-10">
            @Model.Price
        </dd>
        <dt class = "col-sm-2">
            Stock Quantity
        </dt>
        <dd class = "col-sm-10">
            @Model.StockQuantity
        </dd>
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.imagePath" style="max-width: 300px; max-height: 300px;" />
        </dd>
        <dt class = "col-sm-2">
            Category
        </dt>
        <dd class = "col-sm-10">
            @Model.Category?.CategoryName
        </dd>
        <dt class = "col-sm-2">
            Created On
        </dt>
        <dd class = "col-sm-10">
            @Model.CreatedOn
        </dd>
    </dl>
</div>


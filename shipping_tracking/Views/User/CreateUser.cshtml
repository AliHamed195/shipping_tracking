@model shipping_tracking.Models.ViewModels.UserRoleViewModel


<h1>Create User</h1>

<div class="row">
    <form asp-controller="User" asp-action="CreateUser" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label asp-for="User.Name"></label>
            <input asp-for="User.Name" class="form-control" />
            <span asp-validation-for="User.Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="User.Address"></label>
            <textarea asp-for="User.Address" class="form-control"></textarea>
            <span asp-validation-for="User.Address" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="User.Email"></label>
            <input asp-for="User.Email" class="form-control"/>
            <span asp-validation-for="User.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="User.Password"></label>
            <input asp-for="User.Password" class="form-control" type="number" step="0.01" min="0.01" />
            <span asp-validation-for="User.Password" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="User.Phone"></label>
            <input asp-for="User.Phone" class="form-control" />
            <span asp-validation-for="User.Phone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="User.ImageFile">User Image</label>
            <input asp-for="User.ImageFile" type="file" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="User.RoleId">Category</label>
            <select asp-for="User.RoleId" asp-items="@(new SelectList(Model.Roles, "Id", "Name"))" class="select2-dropdown" style="width:100%">
            </select>
            <span asp-validation-for="User.RoleId" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>

@if (TempData["ExceptionError"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            Swal.fire({
                position: 'top-end',
                title: 'Oops!!',
                text: '@TempData["ExceptionError"]',
                icon: 'error',
                showConfirmButton: false,
                timer: 2000
            });
        });

        @TempData["ExceptionError"] = null;
    </script>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('.select2-dropdown').select2();
        });
    </script>
}